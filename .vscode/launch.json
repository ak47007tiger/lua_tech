    "version": "0.2.0",
    "configurations": [
        {
            "name": "launch",
            "type": "lua",
            "request": "launch",
            "stopOnEntry": true,
            "program": "${workspaceFolder}/main.lua",
            "cwd": "${workspaceFolder}",
            "path": "${workspaceFolder}/?.lua",
            "cpath": "${workspaceFolder}/?.dll",
            "arg": [],
            "consoleCoding": "utf8"
        },
        {
            "type": "emmylua_new",
            "request": "launch",
            "name": "EmmyLua New Debug",
            "host": "localhost",
            "port": 9966,
            "ext": [
                ".lua",
                ".lua.txt",
                ".lua.bytes"
            ],
            "ideConnectDebugger": true
        }
    ]
}